{% extends 'base.html.twig' %}

{% block title %}Elec-G Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="row bg-register">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-12 block-overlay my-5">
            <h1 class="text-center my-2">Inscrivez-vous !</h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.postalAddress) }}
                {{ form_row(registrationForm.postalCode) }}
                {{ form_row(registrationForm.city) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <small>* Champs Obligatoires</small>
                {{ form_row(registrationForm.save) }}
            {{ form_end(registrationForm)}}
        </div>
    </div>
    

{% endblock %}
